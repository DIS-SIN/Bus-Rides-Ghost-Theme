    <script type="text/javascript" src="{{asset "translateMe/translateMe.js"}}"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=6LdBDscUAAAAAAQrcc0cyKbKPCZ__w7AxhKNLCED" async defer></script>
    <script src="{{asset "js/feedback.js"}}"></script>


    {{!-- This #block helper will pull data from the hero partial 
